
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="btn-group pull-right">
            <button onclick="window.history.back()" class="btn btn-sm btn-default">Back</button>
            <button data-bind="click:function() { load(); }" class="btn btn-sm btn-default">Refresh</button>
        </div>
        <h1 class="clearfix" style="display:inline-block;">Person</h1>
        <span class="label label-info" data-bind="fadeVisible: isLoading()">Loading...</span>

    </div>

    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label">Title</label>
                <div class="col-md-8">
                    @(Knockout.SelectFor<Person>(p => p.Title))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">First Name</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.FirstName))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Last Name</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.LastName))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Birth Date</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.BirthDate))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Cases Assigned</label>
                <div class="col-md-8">
                    <a data-bind = 'attr: {href: CasesAssignedListUrl}, text: casesAssigned().length + " - Edit"' class='btn btn-default btn-sm'></a>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Cases Reported</label>
                <div class="col-md-8">
                    <a data-bind = 'attr: {href: CasesReportedListUrl}, text: casesReported().length + " - Edit"' class='btn btn-default btn-sm'></a>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Company</label>
                <div class="col-md-8">
                    @(Knockout.SelectForObject<Person>(p => p.Company))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Email</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.Email))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Gender</label>
                <div class="col-md-8">
                    @(Knockout.SelectFor<Person>(p => p.Gender))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Last Bath</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.LastBath))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Name</label>
                <div class="col-md-8">
                    @(Knockout.DisplayFor<Person>(p => p.Name))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Next Upgrade</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.NextUpgrade))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Person Stats</label>
                <div class="col-md-8">
                    @(Knockout.DisplayFor<Person>(p => p.PersonStats))
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Time Zone</label>
                <div class="col-md-8">
                    @(Knockout.InputFor<Person>(p => p.TimeZone))
                </div>
            </div>
        </div>
    </div>

    <div class="panel-body">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Actions</h4>
                </div>
                <table class="table">
                    <tr>
                        <th style="width:20%;">Action</th>
                        <th style="width:50%;">Result</th>
                        <th style="width:20%;">Successful</th>
                        <th style="width:10%;"></th>
                    </tr>
                    <tr>
                        <td>
                            <button class="btn btn-default btn-xs" data-bind="click: renameUi">Rename</button>
                        </td>
                        <td>
                            <span class="" data-bind="text: renameResult"></span>
                        </td>
                        <td>
                            <span class="" data-bind="text: renameWasSuccessful"></span>
                            <span class="" data-bind="visible: renameWasSuccessful(), text: renameMessage"></span>
                        </td>
                        <td>
                            <span class="label label-info" data-bind="fadeVisible: renameIsLoading()">Loading</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class="btn btn-default btn-xs" data-bind="click: fixNameUi">Fix Name</button>
                        </td>
                        <td>
                            <span class="" data-bind="text: fixNameResult"></span>
                        </td>
                        <td>
                            <span class="" data-bind="text: fixNameWasSuccessful"></span>
                            <span class="" data-bind="visible: fixNameWasSuccessful(), text: fixNameMessage"></span>
                        </td>
                        <td>
                            <span class="label label-info" data-bind="fadeVisible: fixNameIsLoading()">Loading</span>
                        </td>
                    </tr>
                </table>
            </div>
    </div>
</div>

@section Scripts
{
    <script>
        var aperson = new ViewModels.Person();
        aperson.includes = "Editor";

        @if (ViewBag.Id != null)
        {
            @:aperson.load('@ViewBag.Id');
        }
        @if (ViewBag.ParentIdName != null)
        {
        @:aperson.@(((string)(@ViewBag.ParentIdName)))(@ViewBag.ParentId);
        }

        aperson.isSavingAutomatically = false;
        aperson.loadChildren(function() {
            ko.applyBindings(aperson);
            aperson.isSavingAutomatically = true;
        });
    </script>
}
