{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "declaration": true,
    "lib": ["es2015", "es2017", "dom"],

    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
    
  "exclude": [
    "node_modules"
  ]
}